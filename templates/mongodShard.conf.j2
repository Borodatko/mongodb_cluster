processManagement:
  pidFilePath: /var/run/mongodb/mongod.pid                       
  timeZoneInfo: /usr/share/zoneinfo

systemLog:
  destination: file
  logAppend: true
  path: /var/log/mongodb/mongod.log

net:
  port: 27018
  bindIp: 0.0.0.0

replication:
     replSetName: rs0

sharding:
   clusterRole: shardsvr

security:
   keyFile: /var/lib/mongo/mongo-keyfile

storage:
  dbPath: /var/lib/mongo
  journal:
    enabled: true

